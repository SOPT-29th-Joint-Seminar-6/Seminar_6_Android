<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_movie1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_movie_1" />

    <TextView
        android:id="@+id/tv_movie1_describe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="유아인X이재인X안재홍X라미란X김희원, 초능력 갖..."
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_movie1"
        app:layout_constraintStart_toStartOf="@+id/iv_movie1"
        app:layout_constraintTop_toBottomOf="@+id/iv_movie1" />

    <ImageView
        android:id="@+id/iv_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tv_movie1_describe"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie1_describe"
        app:srcCompat="@drawable/ic_web" />

    <TextView
        android:id="@+id/tv_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="TextView"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/iv_web"
        app:layout_constraintTop_toTopOf="@+id/iv_web" />
</androidx.constraintlayout.widget.ConstraintLayout>