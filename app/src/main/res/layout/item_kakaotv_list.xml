<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="329dp"
    android:layout_height="321dp">

    <ImageView
        android:id="@+id/iv_kakaotv_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_icon_full"
        android:layout_width="28dp"
        android:layout_height="14dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_kakaotv_thumbnail" />

    <TextView
        android:id="@+id/tv_channel_title"
        android:layout_width="274dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_icon_full"
        app:layout_constraintTop_toBottomOf="@id/iv_kakaotv_thumbnail" />

    <TextView
        android:id="@+id/tv_channel_intro"
        android:layout_width="307dp"
        android:layout_height="16dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="@id/iv_icon_full"
        app:layout_constraintTop_toBottomOf="@id/iv_icon_full" />

    <ImageView
        android:id="@+id/iv_icon_channel"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="@id/tv_channel_intro"
        app:layout_constraintTop_toBottomOf="@id/tv_channel_intro"
        />
    
    <TextView
        android:layout_width="234dp"
        android:layout_height="17dp"
        app:layout_constraintStart_toEndOf="@id/iv_icon_channel"
        android:layout_marginLeft="6dp"
        app:layout_constraintTop_toTopOf="@id/iv_icon_channel"
        android:layout_marginTop="3dp"
        />

    <ImageView
        android:id="@+id/btn_bell"
        android:layout_width="28dp"
        android:layout_height="28dp"


        />


</androidx.constraintlayout.widget.ConstraintLayout>