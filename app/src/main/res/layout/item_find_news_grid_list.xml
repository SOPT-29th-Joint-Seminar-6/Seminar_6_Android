<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="12dp">

    <ImageView
        android:id="@+id/iv_movie_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="148:82"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_movie_1" />

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="유아인X이재인X안재홍X라미란X김희원,가나다라마바사"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_movie_img"
        app:layout_constraintStart_toStartOf="@+id/iv_movie_img"
        app:layout_constraintTop_toBottomOf="@+id/iv_movie_img" />

    <ImageView
        android:id="@+id/iv_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tv_movie_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_title"
        app:srcCompat="@drawable/ic_web" />

    <TextView
        android:id="@+id/tv_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="웹사이트"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/iv_web"
        app:layout_constraintTop_toTopOf="@+id/iv_web" />
</androidx.constraintlayout.widget.ConstraintLayout>